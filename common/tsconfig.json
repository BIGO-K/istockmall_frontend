{
    "compilerOptions": {
        "target": "esnext",
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "typeRoots": [
            "./node_modules/@types",
            "./@types"
        ],
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom"
        ],
    },
    "include": [
        "./**/*.ts",
        "./**/*.d.ts",
        "./**/*.tsx",
        "./*.ts"
    ],
    "exclude": [
        "./node_modules/vue"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}